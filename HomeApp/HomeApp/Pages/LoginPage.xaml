<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:local="clr-namespace:HomeApp.Pages"
            xmlns:view="clr-namespace:HomeApp.View"
            x:Class="HomeApp.Pages.LoginPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center" x:Name="stackLayout">
        <Label Text="HomeApp - Ваш умный дом" FontSize="Title" TextColor="{view:RgbExtension Red=255, Green=0, Blue=0 }" Padding="30,10,30,10" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Button x:Name="loginButton" Text="{x:Static local:LoginPage.BUTTON_TEXT}" Clicked="Login_Click" CornerRadius="{view:ButtonViewExtension ButtonStyle=Round}" />
        <Label x:Name="infoMessage" FontSize="Small" TextColor="Red" Padding="30,10,30,10" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <Label x:Name="runningDevice" FontSize="15" Padding="30,10,30,10" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
    </StackLayout>
</ContentPage>